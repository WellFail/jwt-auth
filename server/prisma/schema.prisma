datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                      String              @id @default(cuid())
  email                   String              @unique
  password                String
  posts                   Post[]
}

model Post {
  id                      String              @id @default(cuid())
  content                 String?
}
